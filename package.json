{
  "name": "cypress-test-automation",
  "version": "1.0.0",
  "description": "Test automation project with Cypress for UI and API testing",
  "main": "index.js",
  "scripts": {
    "test": "cypress run --browser chrome",
    "cy:open": "cypress open --browser chrome",
    "cy:run": "cypress run --browser chrome --headless",
    "cy:run:ui": "cypress run --browser chrome --headless --spec \"cypress/e2e/ui/**/*\"",
    "cy:run:api": "cypress run --browser chrome --headless --spec \"cypress/e2e/api/**/*\"",
    "cy:run:ci": "cypress run --browser chrome --headless --config video=false",
    "generate:report": "npx mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochawesome.json && npx marge cypress/reports/mochawesome.json -o cypress/reports --inline"
  },
  "keywords": [
    "cypress",
    "testing",
    "automation",
    "ui",
    "api"
  ],
  "author": "Test Automation Engineer",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}